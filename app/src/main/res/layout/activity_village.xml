<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/village_lvl"
        android:layout_width="297dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="Niveau 1"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/village_xp"
        android:layout_width="297dp"
        android:layout_height="33dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:text="XP : 2/5"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/village_lvl" />

    <TextView
        android:id="@+id/village_stats"
        android:layout_width="154dp"
        android:layout_height="265dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:text="VIe : 95/100\nAttaque : 5"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/village_xp" />

    <ImageView
        android:id="@+id/village_image"
        android:layout_width="118dp"
        android:layout_height="269dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/village_xp"
        app:srcCompat="@drawable/hero" />

    <Button
        android:id="@+id/village_quit"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="50dp"
        android:onClick="village_quit"
        android:text="Quitter le village"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>